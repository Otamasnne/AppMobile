<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pedidos.popUpPedido.PopUpPedidoFragment"
    >

    <TextView
        android:id="@+id/txtPop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="placeholder"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_ubicacion_title"
        />

    <TextView
        android:id="@+id/txt_ubicacion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion: "
        app:layout_constraintTop_toBottomOf="@+id/txtPop"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>